{
  "name": "history-sidepanel-extension",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/sidepanel/main.tsx",
    "build": "bun run build:sidepanel && bun run build:background && bun run build:content && bun run copy:public",
    "build:sidepanel": "bun build src/sidepanel/main.tsx --outdir=dist --target=browser --format=esm --external:react --external:react-dom",
    "build:background": "bun build src/background/background.ts --outdir=dist --target=browser --format=esm",
    "build:content": "bun build src/content-script/contentScript.ts --outdir=dist --target=browser --format=esm",
    "copy:public": "cp public/* dist/ 2>/dev/null || true",
    "start": "NODE_ENV=production bun src/sidepanel/main.tsx"
  },
  "dependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chrome": "^0.1.24",
    "@types/react": "^19",
    "@types/react-dom": "^19"
  },
  "paths": {
    "@/*": [
      "src/*"
    ]
  }
}