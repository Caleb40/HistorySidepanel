{
  "name": "history-sidepanel-extension",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/sidepanel/main.tsx",
    "build": "node build.js",
    "build:vite": "vite build && BUILD_TARGET=background vite build && BUILD_TARGET=contentScript vite build",
    "build:bun": "bun run build:sidepanel && bun run build:background && bun run build:content && bun run copy:public",
    "build:sidepanel": "vite build",
    "build:background": "BUILD_TARGET=background vite build",
    "build:content": "BUILD_TARGET=contentScript vite build",
    "copy:public": "cp public/* dist/ 2>/dev/null || true",
    "start": "NODE_ENV=production bun src/sidepanel/main.tsx"
  },
  "dependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chrome": "^0.1.24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "vite": "^7.1.10",
    "@vitejs/plugin-react": "^4.3.4"
  }
}