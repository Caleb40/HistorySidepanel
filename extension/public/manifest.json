{
  "manifest_version": 3,
  "name": "History Sidepanel",
  "version": "0.1.0",
  "description": "Show browsing history and page analytics in a side panel",

  "permissions": [
    "sidePanel",
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "http://localhost:8000/*",
    "https://*/*",
    "http://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "action": {
    "default_title": "Open History Sidepanel"
  }
}